{
  "name": "basalt-assesment",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "npm": "=8.19.2",
    "node": "=16.18.1"
  },
  "scripts": {
    "server": "node ./dist-server/server.js",
    "seed": "cross-env NODE_ENV=Development node ./dist-server/core/mongo/seed/seed.js",
    "transpile": "babel ./src/express-server --out-dir dist-server --copy-files --no-copy-ignored",
    "clean": "rimraf dist-server && rimraf ./src/express-server/react-build",
    "create": "mkdirp dist-server && mkdirp ./src/express-server/react-build",
    "build": "npm-run-all create clean build:react transpile ",
    "build:react": "cd ./src/react-app && npm run build",
    "dev": "cross-env NODE_ENV=Development npm-run-all build server",
    "prod": "cross-env NODE_ENV=Production npm run server",
    "start": "npm run prod",
    "watch:dev": "nodemon",
    "install:all": "npm-run-all install:react install:express",
    "install:react": "cd ./src/react-app && npm install",
    "install:express": "npm install"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-syntax-throw-expressions",
      "@babel/plugin-proposal-throw-expressions"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/express-server/*",
      "src/react-app/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js",
      "src/express-server/react-build/*"
    ]
  },
  "keywords": [],
  "author": "Callan Brombacher",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "mongodb": "^5.1.0",
    "save-dev": "^0.0.1-security",
    "serverless-bundle": "^6.0.0",
    "serverless-http": "^3.2.0",
    "serverless-offline": "^12.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-throw-expressions": "^7.18.6",
    "@babel/plugin-syntax-throw-expressions": "^7.18.6",
    "@babel/preset-env": "^7.21.4",
    "jest": "^29.5.0",
    "mkdirp": "^2.1.6",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1"
  }
}
